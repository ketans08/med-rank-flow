# ============================================
# Med-Rank-Flow Backend Environment Variables
# ============================================
# Copy this file to .env and update with your values
# NEVER commit .env to version control

# ============================================
# Application Configuration
# ============================================
APP_NAME=Med-Rank-Flow API
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true
API_HOST=0.0.0.0
API_PORT=8000

# ============================================
# MongoDB Configuration
# ============================================
# Local MongoDB
MONGODB_URL=mongodb://localhost:27017/med_rank_flow

# MongoDB Atlas (Production) - Uncomment and update
# MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net/med_rank_flow?retryWrites=true&w=majority

MONGODB_DB_NAME=med_rank_flow
MONGODB_MAX_POOL_SIZE=100
MONGODB_MIN_POOL_SIZE=10

# ============================================
# ============================================
# IMPORTANT: Generate a strong secret key for production!
# Use: openssl rand -hex 32

# ============================================
# CORS Configuration
# ============================================
# Comma-separated list of allowed origins
# Development
CORS_ORIGINS=http://localhost:5173,http://localhost:5174

# Production (update with your actual domains)
# CORS_ORIGINS=https://admin.yourdomain.com,https://student.yourdomain.com

CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS,PATCH
CORS_ALLOW_HEADERS=*

# ============================================
# Security Settings
# ============================================
BCRYPT_ROUNDS=12
RATE_LIMIT_PER_MINUTE=60

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# ============================================
# Health Check
# ============================================
HEALTH_CHECK_ENABLED=true
